    <DockPanel>
        <Border DockPanel.Dock="Top" Background="AliceBlue"
                Height="40">
            <TextBlock Text="聊天室" FontSize="18" VerticalAlignment="Center" TextAlignment="Center" Margin="10"/>
        </Border>
        <Grid DockPanel.Dock="Bottom" Height="50" Background="#F5F5F5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <TextBox Margin="10.5" VerticalContentAlignment="Center"/>
            <Border Grid.Column="1" CornerRadius="2" Background="LightBlue" Margin="5,5,10,5">
                <Button BorderThickness="0" Background="Transparent" Content="發送">
                </Button>
            </Border>
        </Grid>

        <Border Background="White">
