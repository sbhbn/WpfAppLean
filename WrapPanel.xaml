    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <GroupBox Header="技能標籤" Margin="10" Grid.Row="0">
            <WrapPanel Margin="5">
                <Border Background="#E3F2FD"
                        CornerRadius="15"
                        Padding="10,5"
                        Margin="5">
                    <TextBlock Text="C#"/>

                </Border>
                <WrapPanel Margin="5">
                    <Border Background="#E8F5E9"
                        CornerRadius="15"
                        Padding="10,5"
                        Margin="5">
                        <TextBlock Text="WPF"/>

                    </Border>
                </WrapPanel>
                <WrapPanel Margin="5">
                    <Border Background="#FFF3E0"
                        CornerRadius="15"
                        Padding="10,5"
                        Margin="5">
                        <TextBlock Text="SQL Server"/>

                    </Border>
                    
                </WrapPanel>
                <WrapPanel Margin="5">
                    <Border Background="#E8F5E9"
                        CornerRadius="15"
                        Padding="10,5"
                        Margin="5">
                        <TextBlock Text="Swagger UI API"/>

                    </Border>
                </WrapPanel>
                <WrapPanel Margin="5">
                    <Border Background="#E3F2FD"
                        CornerRadius="15"
                        Padding="10,5"
                        Margin="5">
                        <TextBlock Text="ASP.NET"/>

                    </Border>
                </WrapPanel>
                <WrapPanel Margin="5">
                    <Border Background="#FBE9E7"
                        CornerRadius="15"
                        Padding="10,5"
                        Margin="5">
                        <TextBlock Text="Java Web"/>

                    </Border>
                </WrapPanel>
            </WrapPanel>
        </GroupBox>
        <GroupBox Header="照片牆" Grid.Row="1" Margin="10">
            <WrapPanel Margin="5">

                <Border Width="100" Height="100" Background="#E3F2FD"
                Margin="5" MouseLeftButtonUp="PhotoBlock_Click">
                    <Image Stretch="UniformToFill" RenderTransformOrigin="1,1"/>
                </Border>

                <Border Width="100" Height="100" Background="#FFB74D"
                Margin="5" MouseLeftButtonUp="PhotoBlock_Click">
                    <Image Stretch="UniformToFill"/>
                </Border>

                <Border Width="100" Height="100" Background="#FBE9E7"
                Margin="5" MouseLeftButtonUp="PhotoBlock_Click">
                    <Image Stretch="UniformToFill"/>
                </Border>

                <Border Width="100" Height="100" Background="#E3F2FD"
                Margin="5" MouseLeftButtonUp="PhotoBlock_Click">
                    <Image Stretch="UniformToFill"/>
                </Border>

                <Border Width="100" Height="100" Background="#FFB74D"
                Margin="5" MouseLeftButtonUp="PhotoBlock_Click">
                    <Image Stretch="UniformToFill"/>
                </Border>

                <Border Width="100" Height="100" Background="#FFF3E0"
                Margin="5" MouseLeftButtonUp="PhotoBlock_Click">
                    <Image Stretch="UniformToFill"/>
                </Border>

            </WrapPanel>
        </GroupBox>

    </Grid>

</Window>
