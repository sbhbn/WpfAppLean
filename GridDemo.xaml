<Window x:Class="WpfAppLean.GridDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppLean"
        mc:Ignorable="d"
        Title="GridDemo" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Text="合併Column" Background="Beige"></TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="1" Text="Hello WPF(左上角)" Background="LightBlue"></TextBlock>
        <Button Grid.Column="2" Grid.Row="2" Content="Hello WPF(右下角)" Width="100" Height="40" Background="LightCoral">
        </Button>
    </Grid>
</Window>
