<Window x:Class="WpfAppLean.ViewBoxDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppLean"
        mc:Ignorable="d"
        Title="ViewBoxDemo" Height="450" Width="800">
    <Viewbox Stretch="Uniform">
        <Grid Width="900" Height="600">
            <TextBlock Text="系統監控儀表板" FontSize="24"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"/>

            <UniformGrid Rows="2" Columns="2" Margin="20,60,20,20">
                <Border Background="#FFE0E0" Margin="10" CornerRadius="10">
                    <Viewbox Margin="20">
                        <StackPanel>
                            <TextBlock Text="溫度" FontSize="20"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="25℃"
                                       FontSize="40"
                                       Foreground="#FF4444"
                                       HorizontalAlignment="Center"/>
                            
                        </StackPanel>
                    </Viewbox>
                    
                </Border>


                <Border Background="#E0FFE0" Margin="10" CornerRadius="10">
                    <Viewbox Margin="20">
                        <StackPanel>
                            <TextBlock Text="濕度" FontSize="20"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="65%"
                                       FontSize="40"
                                       Foreground="#4444FF"
                                       HorizontalAlignment="Center"/>

                        </StackPanel>
                    </Viewbox>
                    
                    

                </Border>
                <Border Background="LightGreen" Margin="10" CornerRadius="10">
                    <Viewbox Margin="20">
                        <StackPanel>
                            <TextBlock Text="壓力" FontSize="20"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="1013 hPa"
                                       FontSize="40"
                                       
                                       Foreground="Green"
                                       HorizontalAlignment="Center"/>

                        </StackPanel>
                    </Viewbox>
                </Border>
                <Border Background="AliceBlue" Margin="10" CornerRadius="10">
                    <Viewbox Margin="20">
                        <StackPanel>
                            <TextBlock Text="風速" FontSize="20"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="3.5 m/s"
                                       FontSize="40"
                                       Foreground="#FF8844"
                                       HorizontalAlignment="Center"/>

                        </StackPanel>
                    </Viewbox>
                </Border>
            </UniformGrid>

        </Grid>
    </Viewbox>
</Window>
